<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333333"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="-27dp" tools:layout_editor_absoluteX="-12dp">
    <Button
            android:textColor="@color/white"
            android:text="@string/Register"
            android:layout_width="360dp"
            android:onClick="startregister"
            android:layout_height="60dp" android:id="@+id/startregister"
            app:layout_constraintTop_toBottomOf="@+id/startlogin"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="@+id/startlogin"
            app:layout_constraintStart_toStartOf="@+id/startlogin" app:layout_constraintHorizontal_bias="0.0"
            app:backgroundTint="#3F51B5"/>
    <Button
            android:textColor="@color/white"
            android:text="@string/Login"
            android:layout_width="360dp"
            android:onClick="startlogin"
            android:layout_height="60dp" android:id="@+id/startlogin"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="256dp" app:backgroundTint="#2196F3" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>